<h1 class="page-title">資格作成</h1>

<%= form_with url: admins_qualifications_path, model:@qualification, local: true do |f| %>
　<div class="a-error-box">
	  <%= render 'admins/qualifications/errors', qualification: @qualification %>
	</div>

  <div class="qualification-infomation">

　<div class="qualification-classification">
		<%= f.label :資格名： %>
		<%= f.text_field :name, class: "name" %>
	</div>

	<div class="field">
		<%= f.label :資格区分： %>
		<%= f.select :classification, [["国家", "国家"], ["民間", "民間"]], include_blank: "--選択して下さい--" %>
	</div>

	<div class="field">
		<%= f.label :ジャンル： %>
		<%= f.collection_select :genre_id, Genre.where(is_active: true), :id, :name, include_blank: "--選択して下さい--"  %>
	</div>

	<div class="field">
		<%= f.label :資格概要 %><br>
		<%= f.text_area :body, class: "body", size: "100x20" %>
	</div>

	<div class="actions">
		<%= f.submit '保存する'%>
	</div>

<% end %>