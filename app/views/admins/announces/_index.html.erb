<thead>
  <tr class="a-announce-index-table-title">
    <th></th>
    <th>お知らせ</th>
    <th>区分</th>
    <th>概要</th>
  </tr>
</thead>
<tbody>
  <% announces.each do |announce| %>
    <tr>
      <td></td>
      <td width="350"><%= link_to announce.title, admins_announce_path(announce) %></td>
      <td width="100"><%= announce.category %></td>
      <td class="announce-reduce-text"><%= announce.body %></td>
    </tr>
  <% end %>
</tbody>