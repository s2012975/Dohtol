<div class="ml-5">
  <h3 class="genre-page-title">ジャンル一覧・追加</h3>
</div>

<div class="genre-form-group">
  <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
    <%= render 'layouts/errors', model: f.object %>
    <%= f.label :ジャンル %>
    <%= f.text_field :name %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "無効" %>
    <%= f.submit "追加" %>
  <% end %>
</div>


  <div class="">
    <table class=''>
      <thead class="">
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <% if genre.is_active == true %>
                有効
              <% else %>
                無効
              <% end %>
            </td>
            <td>
              <%= link_to '編集する', edit_admins_genre_path(genre.id), class: '' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
