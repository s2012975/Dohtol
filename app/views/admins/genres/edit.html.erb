<h1 class="page-title">ジャンル編集</h1>

<div class="a-genre-input-form">
  <%= form_with model: @genre, url: admins_genre_path, local:true do |f| %>
    <%= render 'layouts/errors', model: f.object %>
    <%= f.label :ジャンル %>
    <%= f.text_field :name %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "無効" %>
    <%= f.submit '変更を保存する', class: 'btn btn-primary genre-btn' %>
  <% end %>
</div>