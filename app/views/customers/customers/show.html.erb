<h1 class="page-title">会員詳細</h1>


<div clsss="customer-show">
  <div clsss="customer-show">
  <div class="customer-image">
      <%= attachment_image_tag @customer, :profile_image, fallback: "no_image_square.jpg", size: "200x200" %>
    </div>

    <div class="customer-name">
      <%= @customer.nick_name %>
    </div>

    <div class="customer-introduction">
      <p class="customer-introduction-title">
        自己紹介
      </p>
      <div class="customer-introduction-text">
        <%= @customer.introduction %>
      </div>
    </div>

    <div class="customer-edit_btn">
      <% if current_customer == @customer %>
        <%= link_to "編集する", edit_customers_customer_path, class: "btn" %>
      <% end %>
    </div>

    <div class="customer-followers">
      <% if current_customer %>
        <% if current_customer.following?(@customer) %>
          <%= link_to "フォロー外す", customers_customer_relationships_path(@customer.id), method: :delete, class: "btn" %>
        <% else %>
          <%= link_to "フォローする", customers_customer_relationships_path(@customer.id), method: :post, class: "btn" %>
        <% end %>
      <% end %>

      <div>
        <p>フォロー数</p>
        <%=link_to @customer.followings.count, customers_customer_followings_path(@customer) %>
      </div>

      <div>
        <p>フォロワー数</p>
        <%=link_to @customer.followedes.count, customers_customer_followedes_path(@customer) %>
      </div>
    </div>

    <div class="customer-study-qualifications">
      <p>勉強中の資格</p>
      <% @customer.customer_study_qualifications.each do |customer_study_qualification| %>
        <div class="customer_study_qualification">
          <div class="tag-name">
            <%= customer_study_qualification.qualification.name %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="customer-have-qualifications">
      <p>保有資格</p>
      <% @customer.customer_have_qualifications.each do |customer_have_qualification| %>
          <div class="customer_have_qualification">
            <div class="tag-name">
              <%= customer_have_qualification.qualification.name %>
            </div>
          </div>
      <% end %>
    </div>

    <div class="customer-calendar">
      <p>カレンダー</p>
    </div>

    <% if current_customer == @customer %>
      <div class="customer-destroy">
        <%= link_to "ユーザの削除", customer_registration_path(@customer), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn destroy_customer_#{@customer.id}" %>
      </div>
    <% end %>

    <div class="customer-stories">
      <p>投稿したコメント</p>
    </div>

    <div class="customer-stories">
      <p>投稿した体験談</p>
    </div>

    <table id="given_messages">
      <%= render 'customers/post_comments/index', customer: @customer %>
    </table>


    <% if current_customer %>
      <div id="">
        <%= form_with url: customers_customer_post_comments_path(@customer), model: [@customer, @post_comment] do |f| %>

          <% if @post_comment.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @post_comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= f.text_area :body, id: "comment_body", class: "form-control", placeholder: "コメント" %>
          </div>
          <div>
            <%= f.submit "送信" %>
          </div>
        <% end %>
      </div>
    <% end %>
</div>






