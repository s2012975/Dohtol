<h1 class="page-title">資格一覧</h1>

<div class="searh-window">
  <%= search_form_for(@q, url: customers_qualifications_path, method: :get) do |f| %>
    <%= f.label :name, "Keyword" %>
    <span><%= f.search_field :name_cont %></span>
    <span><%= f.submit "検索" %></span>
  <% end %>
</div>

<div class="qualification-index">
  <table class='qualification-index-table'>
    <thead>
      <tr class="qualification-index-table-title">
        <th>資格名</th>
        <th>ジャンル</th>
        <th>概要</th>
      </tr>
    </thead>
    <tbody>
      <% @qualifications.each do |qualification| %>
        <tr class="items">
          <td>
            <%= link_to qualification.name, customers_qualification_path(qualification) %>
          </td>
          <td><%= link_to qualification.genre.name %></td>
          <td><%= qualification.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>