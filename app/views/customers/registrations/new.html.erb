<h1 class="page-title">新規登録</h2>

<div class ="registration-form" >
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <div class="field">
          <th><%= f.label :名前 %></th>
          <td>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "ex) 田中" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "ex) 太郎" %>
          </td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th><%= f.label :フリガナ %></th>
          <td>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ex) タナカ" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ex) タロウ" %>
          </td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th><%= f.label :ニックネーム %></th>
          <td><%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name", placeholder: "ex) ターナー" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th><%= f.label :性別 %></th>
          <td><%= f.select :sex, [["男", "男"], ["女", "女"]], include_blank: "--選択して下さい--" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th><%= f.label :年齢（0～100） %></th>
          <td><%= f.number_field :age, min:1,class: "age", placeholder: "ex) 20（半角英数字）" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "ex) test@test" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th>
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <span>(<%= @minimum_password_length %> 文字以上)</span>
            <% end %>
          </th>
          <td><%= f.password_field :password, autocomplete: "new-password", placeholder: "ex) test12" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th><%= f.label :パスワード（確認用） %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "ex) test12"%></td>
        </div>
      </tr>
    </table>

    <div class="registration-form-actions">
      <%= f.submit "新規登録" %>
    </div>

    <div class="registration-to-login">
      <%= render "customers/shared/links" %>
    </div>

  <% end %>
</div>


