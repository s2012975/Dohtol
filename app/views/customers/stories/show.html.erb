<h1 class="page-title">資格体験談</h1>
<% if current_customer == @customer %>
  <div class="story-edit-btn">
    <%= link_to '体験談を編集する', edit_customers_qualification_story_path(@story), class: "btn" %>
  </div>
<% end %>

<% if customer_signed_in? %>
  <% if @story.liked_by?(current_customer) %>
    <li>
      <%= link_to customers_qualification_story_likes_path(@qualification, @story), method: :delete do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        <%= @story.likes.count %> いいね
      <% end %>
    </li>
  <% else %>
    <li>
      <%= link_to customers_qualification_story_likes_path(@qualification, @story), method: :post do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i>
        <%= @story.likes.count %> いいね
      <% end %>
    </li>
  <% end %>
<% end %>

<!--raty入れたい-->

<div class="story-all">
  <div class="story-top">
    <div class="customer-introduction">
      <div class="customer-introduction-detail">
        <div class="customer-image">
          <%= attachment_image_tag @customer, :profile_image, fallback: "no_image_square.jpg", size: "200x200", class: "customer-image" %>
        </div>
        <div class="customer-name">
          <p><strong><%= @customer.nick_name %></strong><p>
        </div>
      </div>
    </div>
    <div class="story-part-one">
      <div class="story-items">
        <p>タイトル</p>
        <p><strong><%= @story.title %></strong></p>
      </div>

      <div class="story-items">
        <p>資格勉強時間</p>
        <p>約<strong> <%= @story.study_time %> </strong>時間</p>
      </div>

      <div class="story-items">
        <p>理由</p>
        <p><strong><%= @story.reason %></strong></p>
      </div>
    </div>
  </div>
  <div class="story-bottom">
    <div class="story-content">
      <p class="story-content-title">内容</p>
      <strong><%= @story.body %></strong>
    </div>

    <div class="story-content">
      <p class="story-content-title">利用した参考書</p>
      <strong><%= @story.books %></strong>
    </div>
  </div>
</div>

